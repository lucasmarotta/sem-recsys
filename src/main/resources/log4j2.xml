<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Properties>
	  <Property name="logPattern">%d{yyyy-MM-dd hh:mm:ss.SSS} [%p]: %m %n%ex</Property>
	  <Property name="fileName">logs/atenderbot_${date:yyyyMMdd}.log</Property>
	  <Property name="fileNamePattern">logs/atenderbot_%d{yyyyMMdd}_$i.log</Property>
	</Properties>
	
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${logPattern}" />
        </Console>
        <RollingFile name="FileConsole" fileName="${fileName}" append="true" filePattern="${fileNamePattern}" immediateFlush="true">
            <PatternLayout pattern="${logPattern}"/>
			<Policies>
			  <SizeBasedTriggeringPolicy size="5MB"/>
			</Policies>
			<DefaultRolloverStrategy max="20"/>            
        </RollingFile>
	    <Async name="Async">
	      <AppenderRef ref="Console"/>
	      <AppenderRef ref="FileConsole"/>
	    </Async>        
    </Appenders>
    
    <Loggers>
    	<Logger name="com.mchange.v2" level="WARN">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileConsole"/>    		
    	</Logger>
    	<Logger name="org.hibernate" level="WARN">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileConsole"/>    		
    	</Logger>
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileConsole"/>
        </Root>
    </Loggers>
    
</Configuration>